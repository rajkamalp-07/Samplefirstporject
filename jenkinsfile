pipeline{
    agent any
    stages{
        stage('Git Clone'){
            steps{
                git 'https://github.com/shazforiot/HelloWorld-Springboot-App.git'
            }
        }
        
       stage('Maven Test'){
            steps{
              sh 'mvn test'
            }
        } 
        
        stage('Maven Build'){
            steps{
                sh 'mvn package'
            }
        } 
        
        stage('Maven Deploy'){
            steps{
                echo " deploying the war file to the server"
            }
        } 
    }
}
